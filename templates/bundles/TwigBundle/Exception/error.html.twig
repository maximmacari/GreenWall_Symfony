{% extends 'base.html.twig' %}

{% block body %}


	<div class="m-0 m-auto grid grid-cols-3 md:grid-cols-4 gap-4 h-1/6 rounded-lg bg-gray-100 border-secondary p-4">
		<div class="row-span-2 text-lg">
			<div class="">
				<svg xmlns="http://www.w3.org/2000/svg" class="inline-block transform -translate-y-3  fill-current text-red-600 h-16 w-16" viewbox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
