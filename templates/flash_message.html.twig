<div class="absolute w-full hide-5">
	{% for message in app.flashes('success') %}
		<div class="bg-teal-100 border bg-green-200 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
			<div class="flex space-x-3">
				<div class="py-1">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500 mr-4" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
					</svg>
				</div>
				<div>
					<p class="text-gray-500 font-bold">Success!</p>
					<p class="text-gray-500 text-sm">{{ message }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
	{% for message in app.flashes('warning') %}
		<div class="bg-teal-100 border bg-yellow-200 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
			<div class="flex space-x-3">
				<div class="py-1">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500 mr-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
  						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
					</svg>
				</div>
				<div>
					<p class="text-gray-500 font-bold">Warning!</p>
					<p class="text-gray-500 text-sm">{{ message }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
	{% for message in app.flashes('failure') %}
		<div class="bg-teal-100 border bg-red-200 border-teal-500 rounded-b text-teal-900 px-4 py-3 shadow-md" role="alert">
			<div class="flex space-x-3">
				<div class="py-1">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500 mr-4" fill="none" viewbox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
					</svg>
				</div>
				<div>
					<p class="text-gray-500 font-bold">Error!</p>
					<p class="text-gray-500 text-sm">{{ message }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
