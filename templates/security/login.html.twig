{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="relative transform translate-y-1/3 mx-2">
		<div class="m-0 m-auto w-full lg:w-2/5 md:w-2/3">
			<form method="post">


				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<div class="shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
					<p class="text-center font-bold text-lg text-gray-600">Login</p>
					<div class="mb-4">
						<label for="inputEmail" class="block text-gray-600 text-sm font-bold mb-2">
							Email
						</label>
						<input value="{{ last_username }}" name="email" class="focus:outline-none focus:ring-1 focus:ring-green-200 focus:border-transparent shadow appearance-none border rounded w-full py-2 px-3 text-gray-600 form-control" id="inputEmail" type="email" placeholder="green_wall@gmail.com" required autofocus autocomplete="email">
					</div>
					<div class="mb-6">
						<label class="block text-gray-600 text-sm font-bold mb-2" for="inputPassword">
							Password
						</label>
						<input name="password" class="input-text focus:outline-none focus:ring-1 focus:ring-green-200 focus:border-transparent shadow appearance-none rounded w-full py-2 px-3 text-gray-600  form-control" id="inputPassword" type="password" placeholder="******************" autocomplete="current-password" required>
						<div class="text-right">
							<a class="mb-3 inline-block align-baseline font-light text-sm text-green-500 hover:text-green-700" href="#">Forgot password?</a>
						</div>

						<input type="hidden" name="_csrf_token" value="{{csrf_token('authenticate')}}"/>

						
					</div>
					<div class="checkbox mb-3">
						<label>
							<input class="form-checkbox text-green-500" type="checkbox" name="_remember_me">
							Remember me
						</label>
					</div>
					<div class="flex justify-end">

						<button class="btn btn-accept" type="submit">
							Sign In
						</button>

					</div>
					<div class="flex justify-center space-x-2 mt-4">
						<span>Not a member yet?
						</span>
						<a href="{{ path('app_register') }}" class="text-green-500 hover:text-green-400 font-bold" type="button">
							Sign up now!
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
