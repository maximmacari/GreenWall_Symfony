{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="flex my-16">
		<div class="m-0 m-auto w-full lg:w-2/5 md:w-2/3">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						You are logged in as
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Logout</a>
					</div>
				{% endif %}

				<div class="shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
					<div class="mb-4">
						<label for="inputEmail" class="block text-gray-600 text-sm font-bold mb-2">
							Email
						</label>
						<input value="{{ last_username }}" name="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-600 form-control" id="inputEmail" type="email" placeholder="green_wall@gmail.com" required autofocus autocomplete="email">
					</div>
					<div class="mb-6">
						<label class="block text-gray-600 text-sm font-bold mb-2" for="inputPassword">
							Password
						</label>
						<input name="password" class="shadow appearance-none border border-red rounded w-full py-2 px-3 text-gray-600 mb-3 form-control" id="inputPassword" type="password" placeholder="******************" autocomplete="current-password" required>
					</inputtype="hidden"name="_csrf_token"value="{{csrf_token('authenticate')}}">

					{#
												    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
												    See https://symfony.com/doc/current/security/remember_me.html#}
					<div class="checkbox mb-3">
						<label>
							<input class="form-checkbox text-green-500" type="checkbox" name="_remember_me">
							Remember me
						</label>
					</div>
				</div>
				<div class="flex items-center justify-between">
					<button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" type="submit">
						Sign In
					</button>
					<a class="inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" href="#">
						Forgot Password?
					</a>
				</div>
			</form>
		</div>
	</div>

{% endblock %}
